set ruler
syntax on
set nolist
set noignorecase
set nonumber
set magic
set laststatus=2
set statusline=%f\ [%Y,%{&ff}]\ %m%r%=%c,%l(/%L)\ --%p%%
":set statusline=%f\ -\ FileType:\ %y%=Line\ %l/%L;\ Col\ %c
